<p id="notice"><%= notice %></p>

<h1>Passengers</h1>

<table border="2px" class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.name %></td>
        <td><%= passenger.email %></td>
        <td><%= passenger.phone_no %></td>
        <td><%= link_to 'Show', passenger, class:'btn btn-primary' %>
            <%= link_to 'Edit', edit_passenger_path(passenger),class:'btn btn-warning' %>
            <%= link_to 'Destroy', passenger, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="flickr_pagination">
<%= will_paginate @Passenger %>
<%= link_to 'New Passenger', new_passenger_path, class:"btn btn-success" %>
